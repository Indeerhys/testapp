<%= stylesheet_link_tag "index.css" %>

<h1 id='maintitle' class="display-1">Indee</h1>



<div class="login-form">
  <h2>Log in</h2>
  <hr class="m-y-2 breaker login-breaker">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, :class => "login-label" %><br />
      <%= f.email_field :email, autofocus: true, :class => 'login-field' %>
    </div>

    <div class="field">
      <%= f.label :password, :class => "login-label" %><br />
      <%= f.password_field :password, autocomplete: "off",:class => 'login-field' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me, :class => "remember-box"%>
        <%= f.label :remember_me , :class => "remember"%>
      </div>
    <% end -%>

    <div class="actions ">
      <%= f.submit "Log in" , :class => "btn btn-danger btn-lg btn-block btm-margin"%>
    </div>
  <% end %>
  <hr class="m-y-2 breaker login-breaker">

  <%= render "devise/shared/links" %>
</div>
